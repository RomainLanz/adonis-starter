<nav class="navbar navbar-default">
  <div class="container">
    {# Brand #}
    <div class="navbar-header">
      <a class="navbar-brand" href="{{ 'frontend.pages.home' | route }}">Adonis Framework</a>
    </div>

    {# User Actions #}
    <ul class="nav navbar-nav navbar-right">
      {% ifAsync currentUser %}
        <li><p class="navbar-text navbar-right"> Signed in as <strong>{{ currentUser.username }}</strong> - <a href="{{ 'sessions.destroy' | route }}">Logout</a></p></li>
      {% else %}
        <li class="{% if currentUrl == '/login' %}active{% endif %}"><a href="{{ 'sessions.create' | route }}">Login</a></li>
        <li class="{% if currentUrl == '/register' %}active{% endif %}"><a href="{{ 'accounts.create' | route }}">Register</a></li>
      {% endif %}
    </ul>
  </div>
</nav>
